<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PickCard"
    android:id="@+id/pick"
    android:background="#FFFFFF"
    android:longClickable="true">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Name"
        android:id="@+id/pickCard1"
        android:textColor="#b34c00"
        android:textSize="20dp"
        android:typeface="serif"
        android:textStyle="bold"
        android:maxWidth="290dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/pickCard4"
        android:layout_alignStart="@+id/pickCard4"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DESCRIPTION"
        android:id="@+id/pickCard2"
        android:textColor="#aaaaaa"
        android:textSize="12dp"
        android:layout_below="@+id/pickCard1"
        android:layout_toRightOf="@+id/pickacardView"
        android:layout_toEndOf="@+id/pickacardView"
        android:layout_marginBottom="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Description"
        android:id="@+id/pickCard3"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_below="@+id/pickCard2"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:scrollbarSize="8dp"
        android:scrollbarStyle="outsideInset"
        android:fadeScrollbars="false"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/pickacardView"
        android:layout_toEndOf="@+id/pickacardView"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MEANING"
        android:id="@+id/pickCard4"
        android:textColor="#aaaaaa"
        android:textSize="12dp"
        android:layout_below="@+id/pickCard3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Meaning"
        android:id="@+id/pickCard5"
        android:textColor="#000000"
        android:textSize="16dp"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:scrollbarSize="8dp"
        android:scrollbarStyle="outsideInset"
        android:fadeScrollbars="false"
        android:ellipsize="end"
        android:layout_below="@+id/pickCard4"
        android:layout_toRightOf="@+id/pickacardView"
        android:layout_toEndOf="@+id/pickacardView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/pickacardView"
        android:src="@drawable/back"
        android:onClick="onClick"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/pickCard1" />

    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shuffle the deck"
        android:id="@+id/shufflebutton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:enabled="true"
        android:onClick="sendtoShuffle"
        />-->


</RelativeLayout>
